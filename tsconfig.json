{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],

  // "exclude": ["node_modules", "dist"]
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
